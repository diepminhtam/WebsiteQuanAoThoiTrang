@model List<WebsiteQuanAoThoiTrang.Models.Order>
@{
    ViewData["Title"] = "Lịch Sử Đơn Hàng";
}

<div class="container">
    <h2 class="mb-4">Lịch Sử Đơn Hàng Của Bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-history me-2"></i>Bạn chưa có đơn hàng nào. <a asp-controller="Products" asp-action="Index">Bắt đầu mua sắm</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID Đơn Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Chi Tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-success fw-bold">@order.TotalAmount.ToString("N0") VNĐ</td>
                            <td>
                                <span class="badge @(order.Status == "Pending" ? "bg-warning" : order.Status == "Shipped" ? "bg-info" : order.Status == "Delivered" ? "bg-success" : "bg-danger")">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-eye me-1"></i>Xem Chi Tiết
                                </a>
                                @if (order.Status == "Pending")
                                {
                                    <form asp-action="Cancel" method="post" style="display: inline;">
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn hủy đơn hàng này?')">
                                            <i class="fas fa-times me-1"></i>Hủy
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Không thể hủy</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Mua Sắm Thêm
            </a>
        </div>
    }
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />