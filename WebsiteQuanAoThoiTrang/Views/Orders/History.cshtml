@model List<WebsiteQuanAoThoiTrang.Models.Order>
<h2>Lịch sử đơn hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <table class="table">
        <thead>
            <tr><th>ID</th><th>Ngày</th><th>Tổng tiền</th><th>Trạng thái</th><th>Hành động</th></tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                    <td><span class="badge @(order.Status == "Pending" ? "bg-warning" : order.Status == "Shipped" ? "bg-info" : order.Status == "Delivered" ? "bg-success" : "bg-danger")">@order.Status</span></td>
                    <td>
                        @if (order.Status == "Pending")
                        {
                            <!-- THÊM: Form POST để hủy -->
                            <form asp-action="Cancel" method="post" style="display: inline;">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn hủy đơn hàng này?')">Hủy</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Không thể hủy</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Tiếp tục mua sắm</a>