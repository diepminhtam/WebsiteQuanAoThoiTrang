@model WebsiteQuanAoThoiTrang.Models.Product
<h2>@Model.Name</h2>
<img src="@Model.ImageUrl" style="max-width:300px;" />
<p>@Model.Description</p>
<p>Giá: @Model.Price.ToString("N0") VNĐ</p>
<p>Kho: @Model.Stock</p>
<!-- THAY: Form POST -->
<form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="productId" value="@Model.Id" />
    <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control d-inline w-auto" style="width: 60px;" />
    <button type="submit" class="btn btn-success">Thêm vào giỏ</button>
</form>
<a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Quay lại</a>