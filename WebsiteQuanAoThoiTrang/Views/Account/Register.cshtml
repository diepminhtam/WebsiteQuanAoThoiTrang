@model WebsiteQuanAoThoiTrang.Models.ApplicationUser
@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-3 mt-5">
                <div class="card-header bg-success text-white text-center rounded-top-3">
                    <i class="fas fa-user-plus fa-2x mb-2"></i>
                    <h3 class="mb-0">Đăng Ký Tài Khoản Khách Hàng</h3>
                    <p class="small mb-0">Tạo tài khoản để mua sắm dễ dàng!</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register">
                        <div asp-validation-summary="All" class="alert alert-danger small rounded mb-3" style="display: none;"></div>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"><i class="fas fa-user me-2 text-success"></i>Họ và tên đầy đủ</label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên..." required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-2 text-success"></i>Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email..." required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-lock me-2 text-success"></i>Mật khẩu</label>
                            <input name="password" type="password" class="form-control" placeholder="Mật khẩu (ít nhất 6 ký tự)" required minlength="6" />
                        </div>
                        <div class="mb-4">
                            <label class="form-label"><i class="fas fa-lock me-2 text-success"></i>Xác nhận mật khẩu</label>
                            <input name="confirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" required minlength="6" />
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="terms" required />
                            <label class="form-check-label" for="terms">Đồng ý điều khoản dịch vụ</label>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Đăng Ký Khách Hàng
                        </button>
                    </form>
                    <div class="text-center">
                        <p class="small mb-0">Đã có tài khoản? <a asp-action="Login" class="text-success fw-bold">Đăng nhập ngay</a></p>
                        <p class="small"><a asp-action="AdminLogin" class="text-primary">Đăng nhập Admin</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />