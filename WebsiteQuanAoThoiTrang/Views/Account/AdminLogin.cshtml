@{
    ViewData["Title"] = "Đăng Nhập Admin";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h2 class="mb-0">Đăng Nhập Admin</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AdminLogin">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input name="email" class="form-control" placeholder="Nhập email admin..." value="admin@example.com" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input name="password" type="password" class="form-control" placeholder="Nhập mật khẩu..." value="Admin123" required />
                        </div>
                        <button type="submit" class="btn btn-danger btn-lg w-100">Đăng Nhập Admin</button>
                    </form>
                    <div class="text-center mt-3">
                        <p>Chưa có tài khoản? <a asp-action="RegisterAdmin">Đăng ký Admin</a></p>
                        <p><a asp-action="Login">Đăng nhập Khách hàng</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>