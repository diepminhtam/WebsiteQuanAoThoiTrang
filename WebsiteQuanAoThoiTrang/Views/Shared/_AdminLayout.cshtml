<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard Shop Thời Trang</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --sidebar-bg: linear-gradient(180deg, #343a40 0%, #212529 100%);
            --sidebar-hover: #495057;
            --sidebar-active: #0d6efd;
            --navbar-bg: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
            --card-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
        }

        .sb-sidenav-dark {
            background: var(--sidebar-bg);
            color: #fff;
            box-shadow: var(--card-shadow);
            z-index: 1038;
            top: 56px;
            position: fixed;
            height: calc(100vh - 56px);
            width: 280px;
        }

        .sb-nav-link-icon {
            width: 2rem;
            height: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            color: #adb5bd;
        }

        .sb-sidenav-menu .nav-link {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            margin: 0.25rem;
            transition: all 0.3s ease;
            color: #adb5bd;
            display: flex;
            align-items: center;
        }

            .sb-sidenav-menu .nav-link:hover {
                background: var(--sidebar-hover);
                color: #fff;
                transform: scale(1.02);
                box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
            }

            .sb-sidenav-menu .nav-link.active {
                background: var(--sidebar-active);
                color: #fff;
                box-shadow: 0 0.125rem 0.25rem rgba(13, 110, 253, 0.25);
            }

        .sb-topnav {
            background: var(--navbar-bg);
            box-shadow: var(--card-shadow);
            z-index: 1040;
            position: sticky;
            top: 0;
            height: 56px;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
            color: #fff !important;
            padding-left: 1rem;
            line-height: 56px;
            transition: color 0.3s;
        }

            .navbar-brand:hover {
                color: #e9ecef !important;
            }

        footer {
            background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
            border-top: 1px solid #dee2e6;
        }

        #layoutSidenav_content {
            padding-top: 56px;
            margin-left: 0;
            transition: margin-left 0.3s ease;
        }
        /* FIX: Media query escape @@media, gộp một dòng không space/newline */
        @@media(min-width:992px) {
            #layoutSidenav_content {
                margin-left: 280px;
            }
        }

        .sb-sidenav-toggled #layoutSidenav_content {
            margin-left: 0;
        }

        .sb-sidenav-toggled #layoutSidenav_nav {
            width: 0;
            overflow: hidden;
            transform: translateX(-280px);
            transition: transform 0.3s ease;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <!-- Navbar trên (logo, search, dropdown user - z-index cao hơn sidebar) -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <!-- Logo -->
        <a class="navbar-brand ps-3" href="/Admin">
            <i class="fas fa-store me-2"></i>Shop Thời Trang - Admin
        </a>
        <!-- Toggle sidebar -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Search bar -->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Search">
                <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar right -->
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle me-1"></i>
                    @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                            <button type="submit" class="dropdown-item" onclick="return confirm('Bạn có chắc muốn đăng xuất?')">
                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar trái (danh mục menu dọc - top 56px, không che navbar) -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="/Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <a class="nav-link" href="/Admin/Products">
                            <div class="sb-nav-link-icon"><i class="fas fa-box"></i></div>
                            Quản Lý Sản Phẩm
                        </a>
                        <a class="nav-link" href="/Admin/Orders">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Quản Lý Đơn Hàng
                        </a>
                        <a class="nav-link" href="/Admin/Users">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Quản Lý Người Dùng
                        </a>
                        <a class="nav-link" href="/Account/RegisterAdmin">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-plus"></i></div>
                            Thêm Nhân Viên
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Đăng nhập với:</div>
                    @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                </div>
            </nav>
        </div>

        <!-- Nội dung chính (padding-top 56px, margin-left điều chỉnh) -->
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="bg-white py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">© 2025 - Website Quần Áo Thời Trang Admin</div>
                        <div>
                            <a href="#" class="text-muted me-3"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="text-muted me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="text-muted"><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Script toggle sidebar (slide không che navbar) -->
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle("sb-sidenav-toggled");
                    localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
                });
            }
        });
    </script>
</body>
</html>