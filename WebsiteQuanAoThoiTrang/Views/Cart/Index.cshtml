@model List<WebsiteQuanAoThoiTrang.Controllers.CartController.CartItem>
@{
    ViewData["Title"] = "Giỏ Hàng";
}

<div class="container">
    <h2 class="mb-4">Giỏ Hàng Của Bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-shopping-cart me-2"></i>Giỏ hàng rỗng. <a asp-controller="Products" asp-action="Index">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Sản Phẩm</th>
                        <th>Số Lượng</th>
                        <th>Giá</th>
                        <th>Tổng</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>ID: @item.ProductId (Tên sản phẩm)</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("N0") VNĐ</td>
                            <td class="fw-bold">
                                @{
                                    var total = (decimal)(item.Quantity * item.Price);
                                }
                                @total.ToString("N0") VNĐ
                            </td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xóa item này?')">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="3" class="text-end">Tổng Giỏ Hàng:</th>
                        <th class="text-success fw-bold fs-5">
                            @{
                                var grandTotal = (decimal)Model.Sum(i => i.Quantity * i.Price);
                            }
                            @grandTotal.ToString("N0") VNĐ
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Tiếp Tục Mua Sắm
                </a>
            </div>
            <div class="col-md-6 text-end">
                <form asp-controller="Orders" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label class="form-label">Địa Chỉ Giao Hàng</label>
                        <textarea name="address" class="form-control" rows="3" placeholder="Nhập địa chỉ chi tiết..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-check me-2"></i>Đặt Hàng (@grandTotal.ToString("N0") VNĐ)
                    </button>
                </form>
            </div>
        </div>
    }
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />