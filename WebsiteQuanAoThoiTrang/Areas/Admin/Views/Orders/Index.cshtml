@model List<WebsiteQuanAoThoiTrang.Models.Order>
<h2>Quản lý Đơn hàng</h2>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Khách hàng</th><th>Tổng tiền</th><th>Trạng thái</th><th>Hành động</th></tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.FullName</td> <!-- Giả sử load User -->
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@order.Id" asp-route-status="Shipped" class="btn btn-info">Giao hàng</a>
                    <a asp-action="UpdateStatus" asp-route-id="@order.Id" asp-route-status="Delivered" class="btn btn-success">Hoàn thành</a>
                </td>
            </tr>
        }
    </tbody>
</table>