@model List<WebsiteQuanAoThoiTrang.Models.ApplicationUser>
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản Lý Người Dùng</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-user-plus fa-sm text-white-50"></i> Thêm User Mới
        </a>
    </div>

    <!-- Search & Filter -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tìm kiếm người dùng</h6>
        </div>
        <div class="card-body">
            <form id="searchForm" asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-5">
                        <input type="text" name="search" class="form-control" placeholder="Tìm theo tên hoặc email..." value="@ViewBag.Search" style="z-index: 1; position: relative;" />
                    </div>
                    <div class="col-md-3">
                        <select name="role" class="form-select">
                            @foreach (var r in ViewBag.Roles)
                            {
                                <option value="@r" selected="@(ViewBag.Role == r)">@r</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary me-2">Tìm kiếm</button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">Xóa bộ lọc</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Table Danh Sách User -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh Sách Người Dùng (@Model.Count user)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover" width="100%">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tên Đầy Đủ</th>
                            <th>Email</th>
                            <th>Vai Trò</th>
                            <th>Trạng Thái</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id.Substring(0, 8)...</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-success")">@user.Role</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">Hoạt động</span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" method="post" style="display: inline;" onsubmit="return confirm('Xóa user này?')">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Pagination -->
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">Trước</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">Sau</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- FIX: Script JS để nút "Xóa bộ lọc" clear input/select và submit -->
<script>
    function clearFilters() {
        const form = document.getElementById('searchForm');
        const searchInput = form.querySelector('input[name="search"]');
        const roleSelect = form.querySelector('select[name="role"]');
        searchInput.value = '';
        roleSelect.value = 'All';
        form.submit();  <!-- FIX: Submit form với giá trị rỗng để Controller nhận search="" và role="All" -->
    }
</script>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}